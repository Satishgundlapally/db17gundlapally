extends layout 
 
block content 
  h1= title 
 
  form(id='ElephantForm', action="/resource/Elephant", method="POST") 
    div.form-group 
        label.ElephantAttr(for='colour') Elephant type 
        input#colour(type='text', name='colour') 
    div.form-group 
        label.ElephantAttr(for='age') Elephant age 
        input#age(type='text', name='age') 
    div.form-group 
        label.ElephantAttr(for='weight') Elephant weight 
        input#weight(type='number', name='weight') 
    input(type="submit") 
 
  script. 
    document.forms['ElephantForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 